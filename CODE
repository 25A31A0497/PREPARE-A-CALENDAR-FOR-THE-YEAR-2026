#include <stdio.h>

/* Function to check leap year */
int isLeap(int year) {
    if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0))
        return 1;
    else
        return 0;
}

int main() {
    int year = 2026;
    int daysInMonth[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    char *months[] = {"January", "February", "March", "April", "May", "June",
                       "July", "August", "September", "October", "November", "December"};

    int day = 4; // 1 Jan 2026 is Thursday (0=Sun, 1=Mon, ..., 6=Sat)

    if (isLeap(year))
        daysInMonth[1] = 29;

    for (int i = 0; i < 12; i++) {
        printf("\n\n------------ %s %d ------------\n", months[i], year);
        printf("Sun Mon Tue Wed Thu Fri Sat\n");

        for (int space = 0; space < day; space++)
            printf("    ");

        for (int date = 1; date <= daysInMonth[i]; date++) {
            printf("%3d ", date);

            if (++day > 6) {
                printf("\n");
                day = 0;
            }
        }
    }

    return 0;
}
